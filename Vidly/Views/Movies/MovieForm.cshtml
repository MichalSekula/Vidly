@model Vidly.ViewModel.MoviesFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Movies.Name)
        @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    @*<div class="form-group">
        @Html.LabelFor(m => m.Movies.DateAdded)
        @Html.TextBoxFor(m => m.Movies.DateAdded, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>*@
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Movies.GenreId)
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select a Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Movies.NumberInStock)
        @Html.TextBoxFor(m => m.Movies.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movies.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
